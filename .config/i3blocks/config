# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=false
separator_block_width=15

[ram]
command=ram_usage
interval=2
markup=pango

[network]
command=network_status
interval=2
markup=pango

[updates]
command=show_updates
interval=3600
markup=pango


[battery]
command=battery_status
interval=60
markup=pango

[date]
command=date_formated_pango
interval=1
markup=pango

